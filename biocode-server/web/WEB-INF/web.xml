<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <servlet>
        <description>Used to initialize the LIMS</description>
        <servlet-name>LIMSInitializationServlet</servlet-name>
        <servlet-class>com.biomatters.plugins.biocode.server.LIMSInitializationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <security-constraint>
      <web-resource-collection>
        <web-resource-name>
          Biocode LIMS Server
        </web-resource-name>
        <url-pattern>/biocode/*</url-pattern>
      </web-resource-collection>
      <auth-constraint>
          <role-name>lims</role-name>
      </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>BiocodeLIMS</realm-name>
    </login-config>
</web-app>
