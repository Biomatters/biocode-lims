<project xmlns:ivy="antlib:org.apache.ivy.ant" name="MooreaLabBench" default="dist" basedir=".">

    <property name="plugin-name" value="com.biomatters.plugins.biocode.BiocodePlugin"/>
    <property name="short-plugin-name" value="Biocode_2_5_3"/>

    <property name="build" location="build"/>
    <property name="classes" location="classes"/>
    <property name="lib" location="lib"/>
    <property name="resources" location="resources"/>
    <property name="src" location="src"/>


    <path id="classpath">
        <fileset dir="${lib}"/>
    </path>

    <target name= "dist" depends="build">
        <zip zipfile="${build}/${short-plugin-name}.gplugin">
            <fileset dir="${build}">
               <include name="${plugin-name}/**/*"/>
            </fileset>
        </zip>
        <copy file="${build}/${short-plugin-name}.gplugin" todir="${build}/../../downloads"/>

    </target>

    <target name="build" depends="compile">
        <jar jarfile="${build}/${plugin-name}.jar">
            <fileset dir="${classes}"/>
        </jar>
        <mkdir dir="${build}/${plugin-name}"/>
        <copy todir="${build}/${plugin-name}">
            <fileset dir="${build}">
                <include name="${plugin-name}.jar"/>
            </fileset>
            <fileset dir="lib">
                <include name="*.jar"/>
                <!-- Exclude Javadoc and sources from build -->
                <exclude name="*-sources.jar"/>
                <exclude name="*-javadoc.jar"/>
                <!-- Exclude the Geneious Public API libraries because they are available at runtime -->
                <exclude name="GeneiousPublicAPI*.jar"/>
                <exclude name="jdom*.jar"/>
                <exclude name="jebl*.jar"/>
            </fileset>
            <fileset dir="resources"/>
            <fileset dir="doc">
                <include name="readme.html"/>
            </fileset>
        </copy>

    </target>

    <target name="compile" depends="prepare,resolve">
        <javac target="1.6" source="1.6" destdir="${classes}" debug="true">
            <classpath refid="classpath"/>
            <src path="${src}"/>
        </javac>
    </target>

    <target name="prepare">
        <mkdir dir="${build}"/>
        <mkdir dir="${classes}"/>
    </target>

    <target name="clean">
        <delete dir="${build}"/>
        <delete dir="${classes}"/>
    </target>


    <!-- setup reference to the Ivy Ant tasks library -->
    <path id="ivy.lib.path">
        <fileset dir="tools" includes="ivy*.jar" />
    </path>


    <taskdef resource="org/apache/ivy/ant/antlib.xml" uri="antlib:org.apache.ivy.ant" classpathref="ivy.lib.path" />

    <!-- load ivy settings -->
    <ivy:settings file="ivysettings.xml" id="biocode.ivy.config" />

    <target name="resolve" description="Retrieve dependencies with ivy">
       <ivy:retrieve settingsref="biocode.ivy.config"/>
       <ivy:cachepath pathid="lib" settingsref="biocode.ivy.config"/>
    </target>

    <target name="clean-ivy-cache">
        <ivy:cleancache settingsRef="biocode.ivy.config"/>
    </target>
</project>
