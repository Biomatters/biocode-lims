<project name="MooreaLabBench" default="dist" basedir=".">

    <property name="plugin-name" value="com.biomatters.plugins.biocode.BiocodePlugin"/>
    <property name="short-plugin-name" value="Biocode_2_5_3"/>

    <property name="build" location="build"/>
    <property name="classes" location="classes"/>
    <property name="lib" location="lib"/>
    <property name="resources" location="resources"/>
    <property name="src" location="src"/>


    <path id="classpath">
        <fileset dir="geneious-api-libs"/>
        <fileset dir="${lib}"/>
    </path>

    <target name= "dist" depends="build">
        <zip zipfile="${build}/${short-plugin-name}.gplugin">
            <fileset dir="${build}">
               <include name="${plugin-name}/**/*"/>
            </fileset>
        </zip>
        <copy file="${build}/${short-plugin-name}.gplugin" todir="${build}/../../downloads"/>

    </target>

    <target name="build" depends="compile">
        <jar jarfile="${build}/${plugin-name}.jar">
            <fileset dir="${classes}"/>
        </jar>
        <mkdir dir="${build}/${plugin-name}"/>
        <copy todir="${build}/${plugin-name}">
            <fileset dir="${build}">
                <include name="${plugin-name}.jar"/>
            </fileset>
            <fileset dir="lib">
                <include name="*.jar"/>
            </fileset>
            <fileset dir="resources"/>
        </copy>

    </target>

    <target name="compile" depends="prepare">
        <javac target="1.6" source="1.6" destdir="${classes}" debug="true">
            <classpath refid="classpath"/>
            <src path="${src}"/>
        </javac>
    </target>

    <target name="prepare">
        <mkdir dir="${build}"/>
        <mkdir dir="${classes}"/>
    </target>

    <target name="clean">
        <delete dir="${build}"/>
        <delete dir="${classes}"/>
    </target>
</project>